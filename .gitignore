# -----------------------------------------------------
# Composer-managed directories (IGNORE)
# -----------------------------------------------------

/vendor/
/web/core/
/web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/

# -----------------------------------------------------
# Custom code (DO NOT IGNORE)
/web/modules/custom/
/web/themes/custom/
/web/profiles/custom/

# -----------------------------------------------------
# Drupal site settings (sensitive)
# -----------------------------------------------------

/web/sites/*/settings.php
/web/sites/*/settings*.php
/web/sites/*/services*.yml

# Default files (prevent modifications being tracked)
web/sites/default/default.settings.php
web/sites/default/default.services.yml

# -----------------------------------------------------
# Uploaded user content
# -----------------------------------------------------

/web/sites/*/files/
/web/sites/*/private/

# Private key files
/web/private.key
/web/public.key

# -----------------------------------------------------
# Backups & zip dumps
# -----------------------------------------------------

*.sql
*.sql.gz
*.sql.zip
*.tar.gz
*.zip

# -----------------------------------------------------
# Log files
# -----------------------------------------------------

error_log
*.log

# -----------------------------------------------------
# DDEV environment
# -----------------------------------------------------

/.ddev/.import-temp/
/.ddev/db_snapshots/
/.ddev/.downloads/
/.ddev/commands/web/*

# Ignore contrib module DDEV commands
web/modules/**/.ddev/

# -----------------------------------------------------
# Misc system files
# -----------------------------------------------------

.DS_Store
Thumbs.db
*.bak
*.old
*.tmp

# -----------------------------------------------------
# Project-specific ignores
# -----------------------------------------------------

/test
index.html
phpinfo.php
sentinelportal_drupalsentinel.sql
